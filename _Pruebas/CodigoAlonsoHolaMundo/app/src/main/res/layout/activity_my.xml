<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Respuesta"
        android:id="@+id/textView_Respuesta"
        android:layout_marginTop="79dp"
        android:layout_below="@+id/button_Boton"
        android:layout_alignRight="@+id/button_Boton"
        android:layout_alignEnd="@+id/button_Boton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boton"
        android:id="@+id/button_Boton"
        android:layout_marginTop="65dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="26dp" />

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@+id/button_Boton"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button_Boton"
        android:layout_marginBottom="83dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/marco"
        android:background="#ffcad5ff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EsquinaSupIzq"
            android:id="@+id/textView_Esquinero"
            android:layout_gravity="left|top" />
    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/icono2"
        android:layout_below="@+id/button_Boton"
        android:layout_toRightOf="@+id/button_Boton"
        android:layout_toEndOf="@+id/button_Boton"
        android:layout_marginLeft="30dp" />
</RelativeLayout>
