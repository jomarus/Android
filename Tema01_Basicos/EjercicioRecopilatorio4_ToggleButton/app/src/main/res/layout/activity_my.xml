<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton_Rojo"
        android:layout_marginLeft="38dp"
        android:checked="false"
        android:textOn="Rojo"
        android:textOff="No Rojo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="78dp" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton_Verde"
        android:layout_toEndOf="@+id/toggleButton_Rojo"
        android:textOff="No verde"
        android:textOn="Verde"
        android:layout_alignTop="@+id/toggleButton_Rojo"
        android:layout_centerHorizontal="true"
        android:checked="false" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton_Azul"
        android:layout_alignBottom="@+id/toggleButton_Verde"
        android:layout_toRightOf="@+id/toggleButton_Verde"
        android:layout_toEndOf="@+id/toggleButton_Verde"
        android:textOn="Azul"
        android:textOff="NO azul"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/textView_Pantalla"
        android:layout_below="@+id/toggleButton_Rojo"
        android:layout_alignLeft="@+id/toggleButton_Rojo"
        android:layout_alignStart="@+id/toggleButton_Rojo"
        android:layout_marginTop="54dp"
        android:layout_alignRight="@+id/toggleButton_Azul"
        android:layout_alignEnd="@+id/toggleButton_Azul"
        android:background="#ffc2deff" />

</RelativeLayout>
