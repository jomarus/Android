<TableLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:addStatesFromChildren="false">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Color1"
            android:id="@+id/buttonRojo"
            android:layout_column="3"
            android:textColor="#ffff0003" />

        <Button
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Color2"
            android:id="@+id/buttonAmarillo"
            android:layout_column="4"
            android:textColor="#fffffe00" />

        <Button
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:text="Color3"
            android:id="@+id/buttonAzul"
            android:layout_column="5"
            android:textColor="#ff0002ff" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/tabla">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/textView_Pantalla"
            android:layout_column="3"
            android:layout_span="3"
            android:background="#ffffcb5f" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color Inicial"
            android:id="@+id/buttonBorrar"
            android:layout_column="5" />
    </TableRow>
</TableLayout>