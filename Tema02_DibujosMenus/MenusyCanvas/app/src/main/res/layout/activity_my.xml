<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblMensaje"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="Elija una opcion en el menu" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:id="@+id/buttonAceptar"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_marginTop="88dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Lado1"
        android:id="@+id/textViewLado1"
        android:layout_toStartOf="@+id/buttonAceptar"
        android:layout_above="@+id/editTextLado2"
        android:layout_toLeftOf="@+id/buttonAceptar" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Lado2"
        android:id="@+id/textViewLado2"
        android:layout_toStartOf="@+id/lblMensaje"
        android:layout_alignBottom="@+id/editTextLado2"
        android:layout_alignLeft="@+id/textViewLado1"
        android:layout_alignStart="@+id/textViewLado1"
        android:layout_alignRight="@+id/textViewLado1"
        android:layout_alignEnd="@+id/textViewLado1" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextLado1"
        android:layout_alignBottom="@+id/textViewLado1"
        android:layout_alignLeft="@+id/lblMensaje"
        android:layout_alignStart="@+id/lblMensaje"
        android:layout_marginLeft="32dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextLado2"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/editTextLado1"
        android:layout_alignStart="@+id/editTextLado1"
        android:layout_alignRight="@+id/editTextLado1"
        android:layout_alignEnd="@+id/editTextLado1" />

</RelativeLayout>
